use 'sake-outdated'
use 'sake-publish'
use 'sake-version'

task 'clean', 'clean project', ->
  exec 'rm -rf build/contracts'

task 'build', ['compile']

task 'compile', 'build project', ->
  exec 'truffle compile'

task 'deploy', 'deploy contracts', ->
  exec 'truffle migrate'

task 'test', 'test project', ->
  exec 'truffle test'
